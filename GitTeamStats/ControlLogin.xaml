<UserControl x:Class="GitTeamStats.ControlLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitTeamStats"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="310,310,0,0" VerticalAlignment="Top" Width="180" Height="40" FontSize="20" FontWeight="Bold" Click="BtnLogin_Click"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="32" Margin="273,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="32" Margin="273,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261"/>
        <Label Content="   Git Team Stats" HorizontalAlignment="Left" Margin="273,70,0,0" VerticalAlignment="Top" Height="50" Width="261" FontSize="30" FontWeight="Bold"/>
        <Label Content="Username or Email" HorizontalAlignment="Left" Margin="273,143,0,0" VerticalAlignment="Top" Width="111" Height="24"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="273,214,0,0" VerticalAlignment="Top" Width="95" Height="24"/>

    </Grid>
</UserControl>
